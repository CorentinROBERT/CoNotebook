# fastlane/Fastfile
default_platform :ios

platform :ios do
  before_all do
    setup_circle_ci
  end

  desc "Upload to Testflight"
  lane :upload_testflight do

   match(
     type: "appstore",
     app_identifier: "com.corentinrobert.notebook",
     git_url: "https://github.com/CorentinROBERT/match.git", # Update with your own Git repo
   )

  gym(
   scheme: "CoNotebook", # Replace with your Xcode scheme
   export_method: "app-store",
   export_options: {
     uploadBitcode: false,
     uploadSymbols: true,
   }
  )

  pilot(
   distribute_external: false,
   distribute_testers: true,
   groups: "Internal Testers",
  )
  end
end
