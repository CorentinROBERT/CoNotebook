# fastlane/Fastfile
default_platform :ios

platform :ios do
  before_all do
    setup_circle_ci
  end

  desc "Upload to Testflight"
  lane :upload_testflight do

    sh "echo $APP_STORE_CONNECT_API_KEY_KEY_ID"
    sh "echo $APP_STORE_CONNECT_API_KEY_ISSUER_ID"
    sh "echo $APP_STORE_CONNECT_API_KEY_KEY"

    sh "echo $FASTLANE_PASSWORD"

    version_number = get_version_number(xcodeproj: "CoNotebook.xcodeproj")
    latest_build_number = latest_testflight_build_number(
      version: version_number
    ) || 0

    increment_build_number(
      build_number: latest_build_number + 1
    )

    # Set up Distribution code signing and build the app
    match(type: "appstore")
    gym(scheme: "CoNotebook")
    # Upload the binary to TestFlight and automatically publish
    app_store_connect_api_key(
      key_id: $APP_STORE_CONNECT_API_KEY_KEY_ID,
      issuer_id: $APP_STORE_CONNECT_API_KEY_ISSUER_ID,
      key_content: $APP_STORE_CONNECT_API_KEY_KEY
    )

  end
end
